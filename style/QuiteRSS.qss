QMenuBar {
	background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1,
										stop:0 #e0eee0,
										stop:0.4 #d8eed8,
										stop:0.5 #cceecc,
										stop:1 #e0eee0);
	color: #000000;
	padding: 1px;
}

QMenuBar::item {
	padding: 3px 6px;
	background: transparent;
	border-top-left-radius: 4px;
	border-top-right-radius: 4px;
}

QMenuBar::item:selected {
	border: 1px solid #84cc84;
	background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
								stop:0 #e9ffe9,
								stop:0.4 #e1eee1,
								stop:0.5 #d9eed9,
								stop:1 #e9ffe9);
}

QMenuBar::item:pressed {
	border-top: 1px solid #34aa34;
	border-left: 1px solid #34aa34;
	border-right: 1px solid #34aa34;
	border-bottom: none;
	background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
								stop:0 #7acc7a,
								stop:0.4 #70c870,
								stop:0.5 #60c460,
								stop:1 #7acc7a);
	color: white;
}

