/* QuiteRSS Green Style */

QMenuBar {
	background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
										stop:0 #e0eee0,
										stop:0.4 #d8eed8,
										stop:0.5 #cceecc,
										stop:1 #e0eee0);
	color: #000000;
	padding: 1px;
}

QMenuBar::item {
	padding: 3px 6px;
	background: transparent;
	border-top-left-radius: 4px;
	border-top-right-radius: 4px;
}

QMenuBar::item:selected {
	border: 1px solid #84cc84;
	background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
								stop:0 #e9ffe9,
								stop:0.4 #e1eee1,
								stop:0.5 #d9eed9,
								stop:1 #e9ffe9);
}

QMenuBar::item:pressed {
	border: 1px solid #34aa34;
	border-bottom: none;
	background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
								stop:0 #7acc7a,
								stop:0.4 #70c870,
								stop:0.5 #60c460,
								stop:1 #7acc7a);
	color: white;
}

#feedsTreeView_, #newsCategoriesTree_ {
	background: #F9FFF9;
}

#feedsTreeView_::item, #newsView_::item, #newsCategoriesTree_::item {
	min-height: 20px;
}

#categoriesLabel_, #newsTextTitle_ {
	color: #000000;
}

#feedsPanel_, #categoriesPanel_, #stackedWidget_ {
	background: white;
}

QTabWidget::pane {
	background: white;
	border: 1px solid gray;
}

QTabWidget::tab-bar {
	left: 2px;
	bottom: -1px;
}

QTabBar::tab {
	background-color: transparent;
	border: 1px solid gray;
	border-bottom: none;
	border-top-left-radius: 4px;
	border-top-right-radius: 4px;
	min-width: 20px;
	padding: 4px 12px 4px 12px;
	margin-right: 1px;
}

QTabBar::tab:selected, QTabBar::tab:hover {
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
								stop: 0 #ffffff, stop: 0.4 #fafafa,
								stop: 0.5 #f4f4f4, stop: 1.0 #ffffff);
	color: #000000;
}

QTabBar::tab:selected {
	border-bottom: none;
	padding-bottom: 5px;
}

QTabBar::tab:hover:!selected {
	border-bottom: 1px solid gray;
}

QTabBar QToolButton {
	border: 1px solid gray;
	border-radius: 2px;
	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
								stop: 0 #ffffff, stop: 0.4 #fafafa,
								stop: 0.5 #f4f4f4, stop: 1.0 #ffffff);
}

#tabBar_::tab {
	max-width: 130px;
}

#tabBarWidget {
	border-bottom: 1px solid gray;
}

QToolBar {
	border-style: none;
}

#buttonColumnView {
	border: 1px solid qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
								stop: 0 #f0f0f0, stop: 1.0 #D5D5D5);
	border-top: none;
	border-bottom: 1px solid #D5D5D5;
	padding: 5px 0px 1px 0px;
	background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
								stop: 0 #ffffff, stop: 0.4 #ffffff,
								stop: 0.5 #F6F7F9, stop: 1.0 #F1F2F4);
}

#buttonColumnView:hover, #buttonColumnView:pressed {
	border-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
								stop: 0 #88CBEB, stop: 0.4 #88CBEB,
								stop: 0.5 #69BBE3, stop: 1.0 #69BBE3);
	background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
								stop: 0 #E3F7FF, stop: 0.4 #E3F7FF,
								stop: 0.5 #B7E7FB, stop: 1.0 #B7E7FB);
}

#progressBar_, #splashProgress {
	border: 1px solid #A5A5A5;
	border-radius: 2px;
	background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
								stop:0 #f4f4f4,
								stop:0.4 #ECECEC
								stop:0.5 #DEDEDE,
								stop:1 #f4f4f4);
}

#progressBar_::chunk, #splashProgress::chunk {
	background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
								stop:0 #90E890,
								stop:0.4 #7CD07C,
								stop:0.5 #60C060,
								stop:1 #60D060);
	width: 1px;
}

QHeaderView {
	background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
							stop: 0 #ffffff, stop: 0.4 #ffffff,
							stop: 0.5 #F6F7F9, stop: 1.0 #F1F2F4);
	color: #000000;
}

QHeaderView::section {
	min-height: 20px;
	border-right: 1px solid qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
								stop: 0 #f0f0f0, stop: 1.0 #D5D5D5);
	border-bottom: 1px solid #D5D5D5;
	border-top: none;
	border-left: none;
	background-color: transparent;
	padding-left: 3px;
}

QHeaderView::section:hover {
	border: 1px solid qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
								stop: 0 #88CBEB, stop: 0.4 #88CBEB,
								stop: 0.5 #69BBE3, stop: 1.0 #69BBE3);
	border-top: none;
	background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
								stop: 0 #E3F7FF, stop: 0.4 #E3F7FF,
								stop: 0.5 #B7E7FB, stop: 1.0 #B7E7FB);
}

QHeaderView::down-arrow {
	subcontrol-origin: padding;
	subcontrol-position: center top;
	image: url(:/images/images/sortIndicatorD.png);
}

QHeaderView::up-arrow {
	subcontrol-origin: padding;
	subcontrol-position: center top;
	image: url(:/images/images/sortIndicatorA.png);
}

#webViewProgress_ {
	border: 1px solid #D5D5D5;
	border-left: none;
	border-right: none;
	border-bottom: none;
	text-align: center;
	background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
								stop:0 #f9f9f9,
								stop:0.4 #f1f1f1,
								stop:0.6 #e9e9e9,
								stop:1 #f1f1f1);
}

#webViewProgress_::chunk {
	background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
								stop:0 #f1f1f1,
								stop:0.4 #d9d9d9,
								stop:0.6 #d1d1d1,
								stop:1 #d9d9d9);
	width: 10px;
}

#contentLabel_ {
	background-color: qlineargradient(x1:0, y1:0, x2:1, y2:1,
										stop:0.1 #d8eed8,
										stop:0.5 #B8EEB8,
										stop:0.9 #d8eed8);
	color: #000000;
}

#categoriesTree {
	padding: 1px;
}

#categoriesTree::item, #fontTree::item,
#languageFileList_::item, #filtersTree::item,
#shortcutTree::item, #labelsTree_::item {
	min-height: 20px;
}

#foldersTree_::item, #feedsTreeFR::item, #feedsTreeNotify_::item {
	min-height: 18px;
}

QStatusBar #progressBar_{
	margin-right: 5px;
}

QMainWindow::separator {
	border: none;
}

#infoWidgetFR, #actionsWidgetFR {
	background: white;
}

#notificationWidget {
	background: #ffffff;
	border: 1px solid #70c870;
	border-radius: 8px;
}

#titleNotification {
	background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1,
										stop:0 #e0eee0,
										stop:0.4 #d8eed8,
										stop:1 #e0eee0);
	border-bottom: 1px solid #cceecc;
	border-top-left-radius: 8px;
	border-top-right-radius: 8px;
}

#bottomNotification {
	background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1,
										stop:0 #e0eee0,
										stop:0.6 #d8eed8,
										stop:1 #e0eee0);
	border-top: 1px solid #cceecc;
	border-bottom-left-radius: 8px;
	border-bottom-right-radius: 8px;
}

#click2flash-frame {
	border: 1px solid #e4e4e4;
	background: #f4f4f4;
}

#click2flash-toolbutton {
	background: url(:/images/images/flash.png) no-repeat;
	background-position: center;
	border: none;
}

#click2flash-toolbutton:hover {
	background: url(:/images/images/flashstart.png) no-repeat;
	background-position: center;
	border:none;
}
